<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<bean id="service" class="com.pduleba.spring.xml.configuration.beans.ServiceImpl">
		<constructor-arg value="Hello" type="java.lang.String"/>
		<property name="timeService" ref="timeService" />
	</bean>

	<bean id="timeService" class="com.pduleba.spring.xml.configuration.beans.TimeServiceImpl" autowire="byType" />

	<bean id="lazyLogger"
		class="com.pduleba.spring.xml.configuration.beans.LazyLoggerServiceImpl"
		lazy-init="true" init-method="init" destroy-method="destroy"/>

	<!-- Inheritance -->
	<bean id="inheritanceExampleParentTemplate" abstract="true">
		<property name="msg1" value="A" />
		<property name="msg2" value="B" />
		<property name="msg3" value="C" />
	</bean>

	<bean id="inheritanceExampleService" class="com.pduleba.spring.xml.inheritance.InheritanceExampleService"
		parent="inheritanceExampleParentTemplate">
		<property name="msg3" value="3" />
		<property name="msg4" value="4" />
	</bean>

	<!-- Post Processors -->
	<bean class="com.pduleba.spring.xml.postptocessors.SimpleBeanPostProcessor"/>

</beans>